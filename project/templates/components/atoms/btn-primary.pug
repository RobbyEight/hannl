mixin btn-primary(label, href, icon)
  include ../../icons/_icon

  a.btn-primary(href=href)
    
    //- icon before
    if icon && icon !== 'arrow'
      +icon(id=icon)

    span.btn-primary__label #{label}

    //- icon after
    if icon && icon === 'arrow'
      +icon(id=icon)